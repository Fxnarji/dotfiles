/*****----- Configuration -----*****/
configuration {
	modi:                       "drun";
    show-icons:                 true;
    display-drun:               " Apps";
    display-run:                "";
    display-filebrowser:        "";
    display-window:             "";
	drun-display-format:        "{name}";
	window-format:              "{w} · {c} · {t}";
}

/*****----- Global Properties -----*****/
@import "~/.cache/wal/colors-rofi-dark"
@import                          "shared/fonts.rasi"

* {     
    color0:  #101315;
    color1:  #4D6876;
    color2:  #567687;
    color3:  #637C8A;
    color4:  #688A98;
    color5:  #6F95A4;
    color6:  #7FADC2;
    color7:  #c3c4c4;
    color8:  #5a676e;
    color9:  #4D6876;


     color0-transparent:  #101315cc;
     color1-transparent:  #4D6876cc;
     color2-transparent:  #567687cc;
     color3-transparent:  #637C8Acc;
     color4-transparent:  #688A98cc;
     color5-transparent:  #6F95A4cc;
     color6-transparent:  #7FADC2cc;
     color7-transparent:  #c3c4c4cc;
     color8-transparent:  #5a676ecc;
     color9-transparent:  #4D6876cc;

}




/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
    location:                    north;
    anchor:                      north;
    fullscreen:                  false;
    width:                       40%;
    x-offset:                    -775px;
    y-offset:                    10px;

    /* properties for all widgets */
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               20px;
    border-color:                @color1;
    cursor:                      "default";
    background-color:            @color0-transparent;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     5px;
    margin:                      0px;
    padding:                     5px;
    border:                      0px solid;
    border-radius:               0px 0px 0px 0px;
    border-color:                @color1;
    background-color:            transparent;
    children:                    [ "prompt", "entry", "listview" ];
    orientation:                 horizontal;
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     false;
    spacing:                     0px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px;
    border-radius:               0px;
    border-color:                @color1;
    background-color:            transparent;
    text-color:                  @color7;
    children:                    [ "prompt", "entry" ];
}

prompt {
    enabled:                     false;
    padding:                     5px 10px;
    border:                      0px;
    border-radius:               100%;
    border-color:                @color1;
    background-color:            @color0-transparent;
    text-color:                  @color7;
}
textbox-prompt-colon {
    enabled:                     false;
    expand:                      false;
    str:                         "::";
    background-color:            inherit;
    text-color:                  inherit;
}
entry {
    enabled:                     true;
    expand:                      false;
    padding:                     5px 10px;
    width:                       200px;
    border-radius:               100%;
    background-color:            transparent;
    text-color:                  @color7;
    cursor:                      text;
    placeholder:                 "Search...";
    placeholder-color:           inherit;
    vertical-align:              0.5;
    horizontal-align:            0.1;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    lines:                       100;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      horizontal;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     5px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @color1;
    background-color:            transparent;
    text-color:                  @color7;
    cursor:                      "default";
}
scrollbar {
    handle-width:                5px ;
    handle-color:                @color1;
    border-radius:               0px;
    background-color:            @color3;
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     10px;
    margin:                      0px;
    padding:                     5px 10px;
    border:                      0px solid;
    border-radius:               100%;
    border-color:                @color1;
    background-color:            transparent;
    text-color:                  @color7;
    cursor:                      pointer;
}
element normal.normal {
    background-color:            transparent;
    text-color:                  @color6;
}

element alternate.normal{
    background-color:            transparent;
    text-color:                  @color6;
}

element selected.normal {
    background-color:            @color6;
    text-color:                  @color0;
}

element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        24px;
    cursor:                      inherit;
}
element-text {
    background-color:            transparent;
    text-color:                  inherit;
    highlight:                   inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

/*****----- Mode Switcher -----*****/
mode-switcher{
    enabled:                     false;
    spacing:                     10px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @color1;
    background-color:            transparent;
    text-color:                  @color7;
}
button {
    padding:                     10px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @color1;
    background-color:            @color3;
    text-color:                  inherit;
    cursor:                      pointer;
}
button selected {
    background-color:            @color6;
    text-color:                  @color0-transparent;
}

/*****----- Message -----*****/
message {
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px 0px 0px 0px;
    border-color:                @color1;
    background-color:            transparent;
    text-color:                  @color7;
}
textbox {
    padding:                     5px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @color1;
    background-color:            @color3;
    text-color:                  @color7;
    vertical-align:              0.5;
    horizontal-align:            0.0;
    highlight:                   none;
    placeholder-color:           @color7;
    blink:                       true;
    markup:                      true;
}
error-message {
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @color1;
    background-color:            @color0-transparent;
    text-color:                  @color7;
}